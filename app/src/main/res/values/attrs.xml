<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 这样可以引用系统样式 -->
    <declare-styleable name="KProgressListViews">
        <attr name="kProgressListViewStyle" format="reference" />
    </declare-styleable>
    <!-- 多种状态的listview -->
    <declare-styleable name="KProgressListView">
        <attr name="loadingView" />
        <attr name="emptyView" />
        <attr name="errorView" />
        <attr name="header_hint_normal" />
        <attr name="header_hint_ready" />
        <attr name="header_hint_loading" />
        <attr name="footer_hint_ready" />
        <attr name="footer_hint_normal" />
    </declare-styleable>
    <!-- 这样可以引用系统样式 -->
    <declare-styleable name="KProgressLayouts">
        <attr name="kProgressLayoutsStyle" format="reference" />
    </declare-styleable>
    <!-- 多种状态的linerlayout -->
    <declare-styleable name="KProgressLayout">
        <attr name="loadingView" />
        <attr name="emptyView" />
        <attr name="errorView" />
    </declare-styleable>

    <attr name="loadingView" format="reference" />
    <attr name="emptyView" format="reference" />
    <attr name="errorView" format="reference" />
    <!-- 下拉刷新 -->
    <attr name="header_hint_normal" format="string|reference" />
    <attr name="header_hint_ready" format="string|reference" />
    <attr name="header_hint_loading" format="string|reference" />
    <attr name="footer_hint_ready" format="string|reference" />
    <attr name="footer_hint_normal" format="string|reference" />
    <attr name="arrow_pic" format="reference" />
    <declare-styleable name="KListView">
        <attr name="header_hint_normal" />
        <attr name="header_hint_ready" />
        <attr name="header_hint_loading" />
        <attr name="footer_hint_ready" />
        <attr name="footer_hint_normal" />
        <attr name="arrow_pic" format="reference" />
    </declare-styleable>
    <declare-styleable name="KListViews">
        <attr name="KListViewStyle" format="reference" />
    </declare-styleable>

    <!-- 圆形imageview -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>

</resources>